{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "outDir": "dist",
        "sourceMap": true,
        "rootDir": "extensions/vscode",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "types": ["node", "vscode"],
        "resolveJsonModule": true
    }
}